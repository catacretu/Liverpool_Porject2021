<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/steve1"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/history"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/anfield_01"
        android:text="@string/history"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"
        android:textColor="#f0f0f5"
        android:textStyle="bold"
        android:gravity="clip_vertical"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0.55"/>
    <Button
        android:id="@+id/lineup"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="@string/lineup"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#f0f0f5"
        android:textStyle="bold"
        android:gravity="clip_vertical"
        android:textSize="20sp"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/history"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/mo_back1"
        app:layout_constraintHorizontal_bias="0.55"
        />
    <Button
        android:id="@+id/video"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="@string/ucl"
        android:textColor="#f0f0f5"
        android:gravity="clip_vertical"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineup"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ucl1"
        app:layout_constraintHorizontal_bias="0.55"
        />


</android.support.constraint.ConstraintLayout>